generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// ENUM de roles
enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

// Modelo de usuarios
model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(CUSTOMER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Modelo de productos
model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@unique([name])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  brand       String?
  description String    @default("")
  color       String?
  price_cents Int
  stock       Int       @default(0)
  is_active   Boolean   @default(true)
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  image_url   String?
  thumb_url   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  images      ProductImage[]
}

// Galeria de imagenes por producto (max 10 por producto en logica de app)
model ProductImage {
  id           Int      @id @default(autoincrement())
  productId    Int
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  filename     String
  original_url String
  thumb_url    String
  width        Int?
  height       Int?
  mime         String
  size         Int
  position     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([productId])
  @@unique([productId, position])
}
