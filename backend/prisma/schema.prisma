generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUM de roles
enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

// Modelo de usuarios
model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(CUSTOMER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  cart          Cart?
  orders        Order[]
}

// Modelo de productos
model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@unique([name])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  brand       String?
  description String    @default("")
  color       String?
  price_cents Int
  stock       Int       @default(0)
  is_active   Boolean   @default(true)
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  image_url   String?
  thumb_url   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  images      ProductImage[]
  cartItems   CartItem[]
  orderItems  OrderItem[]
}

// Galeria de imagenes por producto (max 10 por producto en logica de app)
model ProductImage {
  id           Int      @id @default(autoincrement())
  productId    Int
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  filename     String
  original_url String
  thumb_url    String
  width        Int?
  height       Int?
  mime         String
  size         Int
  position     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([productId])
  @@unique([productId, position])
}

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItem {
  id        Int      @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}

// Enums para estados y métodos de pago
enum OrderStatus {
  pending
  paid
  shipped
  delivered
  cancelled
}

enum PaymentMethod {
  simulado
  webpay
  paypal
}

enum TicketStatus {
  pending
  approved
  rejected
  closed
}

// Modelo para las órdenes
model Order {
  id        Int          @id @default(autoincrement())
  userId    Int
  status    OrderStatus  @default(pending)
  total     Int          @map("total_cents")
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items    OrderItem[]
  payments Payment[]
  tickets  Ticket[]

  @@index([userId])
  @@map("orders")
}

// Modelo para los Items de una Orden
model OrderItem {
  id        Int @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int @map("qty")
  unitPrice Int @map("unit_price_cents")
  subtotal  Int @map("subtotal_cents")

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  ticketItems TicketItem[]

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

// Modelo para los Pagos
model Payment {
  id      Int           @id @default(autoincrement())
  orderId Int
  method  PaymentMethod @default(simulado)
  amount  Int           @map("amount_cents")
  paidAt  DateTime      @default(now()) @map("paid_at")

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@map("payments")
}

model Ticket {
  id           Int          @id @default(autoincrement())
  code         String       @unique
  orderId      Int
  order        Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  status       TicketStatus @default(pending)
  reason       String
  contactName  String
  contactEmail String
  contactPhone String?
  notes        String?
  expiresAt    DateTime
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  items        TicketItem[]

  @@index([orderId])
}

model TicketItem {
  id          Int       @id @default(autoincrement())
  ticketId    Int
  ticket      Ticket    @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  orderItemId Int
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Restrict)
  quantity    Int

  @@index([ticketId])
  @@index([orderItemId])
  @@unique([ticketId, orderItemId])
}
