generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUM de roles de usuario
enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

// 游릭 NUEVO: Enum para estado de orden
enum OrderStatus {
  pending
  paid
  shipped
  cancelled
}

// 游릭 NUEVO: Enum para estado de ticket
enum TicketStatus {
  open
  approved
  rejected
  closed
}

// Modelo de usuarios
model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  role          Role     @default(CUSTOMER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  cart          Cart?

  // 游릭 A칌ADIDO: Relaciones con Orden y Tickets
  orders        Order[]
  tickets       ReturnTicket[]
}

// Modelo de productos
model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@unique([name])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  brand       String?
  description String    @default("")
  color       String?
  price_cents Int
  stock       Int       @default(0)
  is_active   Boolean   @default(true)
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  image_url   String?
  thumb_url   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  images      ProductImage[]
  cartItems   CartItem[]

  // 游릭 A칌ADIDO: Relaci칩n con items de orden
  orderItems  OrderItem[]
}

// Galeria de imagenes por producto (max 10 por producto en logica de app)
model ProductImage {
  id           Int      @id @default(autoincrement())
  productId    Int
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  filename     String
  original_url String
  thumb_url    String
  width        Int?
  height       Int?
  mime         String
  size         Int
  position     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([productId])
  @@unique([productId, position])
}

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItem {
  id        Int      @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@unique([cartId, productId])
}

// ----------------------------------------------------
// 游릭 INICIO: MODELOS A칌ADIDOS (Order, OrderItem, ReturnTicket)
// ----------------------------------------------------

// Modelo de Pedidos (Necesario para los tickets)
model Order {
  id         String      @id @default(cuid())
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
  totalCents Int
  status     OrderStatus @default(pending)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  items   OrderItem[]
  tickets ReturnTicket[] // Una orden puede tener varios tickets

  @@map("orders")
  @@index([userId])
}

// Modelo de Items del Pedido (Necesario para los tickets)
model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  order      Order   @relation(fields: [orderId], references: [id])
  productId  Int
  product    Product @relation(fields: [productId], references: [id])
  quantity   Int
  priceCents Int // Precio al momento de la compra

  @@map("order_items")
  @@index([orderId])
  @@index([productId])
}

// Modelo de Tickets de Cambio (Tu Tarea)
model ReturnTicket {
  id        String       @id @default(cuid())
  reason    String       @db.Text
  status    TicketStatus @default(open)
  openedAt  DateTime     @default(now()) @map("opened_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  // Relaci칩n con la Orden
  orderId String @map("order_id")
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // Relaci칩n con el Usuario (Cliente)
  // Nota: userId es Int para coincidir con tu modelo User
  userId Int @map("user_id")
  user   User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("return_tickets")
  @@index([orderId])
  @@index([userId])
}